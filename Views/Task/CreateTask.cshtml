@model TaskManagementSystem.ViewModel.TaskViewModel

@{
    ViewBag.Title = "Create Task";
}

<div class="d-flex justify-content-center align-items-center min-vh-100 bg-light px-3">
    <div class="card shadow-lg p-5 w-50 custom-card">
        <!-- Centered content within the card -->
        <h2 class="text-center mb-4 text-primary">Create Task</h2>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()


            <div class="row g-4">
                <div class="col-md-12">
                    @Html.LabelFor(model => model.Title, new { @class = "form-label fw-bold text-center w-100" })
                    <div class="d-flex justify-content-center">
                        @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control text-center w-75" } })
                    </div>
                    @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row g-4 mt-3">
                <div class="col-12">
                    @Html.LabelFor(model => model.Description, new { @class = "form-label fw-bold text-center w-100" })
                    <div class="d-flex justify-content-center">
                        @Html.TextAreaFor(model => model.Description, new { @class = "form-control custom-textarea text-center w-75" })
                    </div>
                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                </div>
            </div>

           

            <div class="d-flex justify-content-center mt-4">
                <button type="submit" class="btn btn-primary px-4">Create</button>
                <span class="mx-2"></span>
                @Html.ActionLink("Back to List", "TaskList","Task", null, new { @class = "btn btn-secondary px-4" })
            </div>
        }
    </div>
</div>

<link rel="stylesheet" href="~/Content/custom-styles.css" />
