@{ ViewBag.Title = "Task Manager"; }

<main>
    <section class="row" aria-labelledby="taskManagerTitle">
        <h1 id="taskManagerTitle">Task Manager</h1>
        <p class="lead">Efficiently organize, track, and manage your tasks with our powerful Task Manager.</p>
    </section>

    <div class="row">
        <section class="col-md-4" aria-labelledby="createTaskTitle">
            <h2 id="createTaskTitle">Create Tasks</h2>
            <p>Quickly add and categorize tasks to stay organized and boost productivity.</p>
            <p><a class="btn btn-outline-dark" href="#">Create Task &raquo;</a></p>
        </section>
        <section class="col-md-4" aria-labelledby="manageTaskTitle">
            <h2 id="manageTaskTitle">Manage Tasks</h2>
            <p>Edit, update, and prioritize your tasks with an easy-to-use interface.</p>
            <p><a class="btn btn-outline-dark" href="#">Manage Tasks &raquo;</a></p>
        </section>
        <section class="col-md-4" aria-labelledby="trackProgressTitle">
            <h2 id="trackProgressTitle">Track Progress</h2>
            <p>Monitor task completion and stay on top of deadlines effectively.</p>
            <p><a class="btn btn-outline-dark" href="#">View Progress &raquo;</a></p>
        </section>
    </div>
</main>
