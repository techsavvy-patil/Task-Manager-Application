@model TaskManagementSystem.ViewModel.RegisterViewModel

@{
    ViewBag.Title = "Register";
}

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg p-4 w-100 text-center" style="max-width: 400px; border-radius: 10px;">
        <h3 class="text-center text-primary fw-bold">Register</h3>
        <hr>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

    <div class="mb-3">
        @Html.LabelFor(model => model.Username, new { @class = "form-label fw-semibold" })
