            @Html.PasswordFor(model => model.Password, new { @class = "form-control rounded-pill text-center w-75" })
        </div>
        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
    </div>

    <div class="mb-3">
        @Html.LabelFor(model => model.ConfirmPassword, new { @class = "form-label fw-semibold" })
