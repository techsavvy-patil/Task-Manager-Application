            @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control rounded-pill text-center w-75" } })
        </div>
        @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
    </div>

